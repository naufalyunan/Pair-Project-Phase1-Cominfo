<body>
  <!-- <canvas id="myChart" width="900" height="500"></canvas> -->
    <div class="container">
        <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <div class="display-flex align-center">
                    <h6 class="m-0 font-weight-bold text-dark">TABLE COMMODITIES</h6>
                  </div>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Januari</th>
                          <th>Februari</th>
                          <th>Maret</th>
                          <th>April</th>
                          <th>Mei</th>
                          <th>Juni</th>
                          <th>Juli</th>
                          <th>Agustus</th>
                          <th>September</th>
                          <th>Oktober</th>
                          <th>November</th>
                          <th>Desember</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>Average Price</td>
                          <% for(let i = 0; i < priceData.length; i++){%>
                            <td> <%= priceData[i] %> </td>
                          <%} %>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Trader Name</th>
                          <th>Commodity Name</th>
                          <th>Price</th>
                          <th>Date</th>
                          <th>Location</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(let i = 0; i < searched.length; i++){%>
                          <tr>
                            <td> <%= i + 1 %> </td>
                            <td> <%= searched[i].dataValues.Trader.dataValues.name %> </td>
                            <td> <%= searched[i].dataValues.Commodity.dataValues.name %> </td>
                            <td> <%= searched[i].dataValues.price %> </td>
                            <td> <%= searched[i].dataValues.date %> </td>
                            <td> <%= searched[i].dataValues.location %> </td>
                            <td> <a href="/conjunction/edit/<%= searched[i].dataValues.id %>" class="btn ">Edit</a> <a href="conjunction/delete/<%= searched[i].dataValues.id %>" class="btn ">Delete</a></td>
                          </tr>
                        <%} %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
    </div>
    

